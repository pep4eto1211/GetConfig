
<div class="modal" id="valueEditModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="valueEditModalTitle">Edit value</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="modal-close-btn">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="config-value-name">Value name:</label>
                    <input type="text" class="form-control material-input" id="config-value-name" placeholder="Value name">
                </div>
                <div class="form-group">
                    <label for="config-value-description">Value description:</label>
                    <input type="text" class="form-control material-input" id="config-value-description" placeholder="Value description">
                </div>
                <div class="form-group">
                    <label for="config-value">Value:</label>
                    <input type="text" class="form-control material-input" id="config-value" placeholder="Value">
                </div>
                <div class="progress" id="saving-bar">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
                </div>
            </div>
            <div class="modal-footer" id="value-modal-footer">
                <button type="button" class="btn btn-primary" id="save-changes-btn" data-id="-1" data-project-id="@ViewBag.ProjectId">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="valueViewModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="valueViewModalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="modal-close-btn">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="valueViewModalValue">

            </div>
            <div class="modal-footer" id="value-modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="confirmDeleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="modal-close-btn">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete config value <span id="deleteValueName"></span>?
            </div>
            <div class="modal-footer" id="value-modal-footer">
                <button type="button" class="btn btn-primary" id="confirm-delete-btn">Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
