@model IEnumerable<GetConfig.Db.ViewModels.ConfigValueViewModel>

@{
    ViewData["Title"] = "ConfigValues";
}

<style>
    main {
        margin-top: 0;
    }
</style>

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#config">Config</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#usage">Usage</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#settings">Project settings</a>
    </li>
</ul>
<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active show" id="config">
        @if (Model.Count() > 0)
        {
            <div class="d-flex flex-row">
                <div class="mr-auto p-2">
                    <h1>@ViewBag.ProjectName config:</h1>
                </div>
                <div class="p-2">
                    <button type="button" class="btn btn-secondary" id="add-new-value-btn" data-toggle="modal" data-target="#valueEditModal" onclick="prepareAddModal()">+ Add new</button>
                </div>
            </div>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th class="values-table-header">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th class="values-table-header">
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th class="values-table-header">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="values-table-row">
                            <td class="values-table-cell">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="values-table-cell">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td class="values-table-cell">
                                <button type="button" class="btn btn-link action-btn" data-toggle="modal" data-target="#valueViewModal" onclick="setValueModal('@item.Name', '@item.Value')">View</button> |
                                <button type="button" class="btn btn-link action-btn" data-toggle="modal" data-target="#valueEditModal" onclick="prepareEditModal('@item.Name', '@item.Value', '@item.Description', @item.Id)">Edit</button> |
                                <button type="button" class="btn btn-link action-btn" data-toggle="modal" data-target="#confirmDeleteModal" onclick="prepareDeleteModal('@item.Name', @item.Id)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="jumbotron">
                <h3 class="display-3">@ViewBag.ProjectName has no config values</h3>
                <p class="lead">You haven't created any config values yet. You can easily start here:</p>
                <p class="lead">
                    <button class="btn btn-primary btn-lg" role="button" data-toggle="modal" data-target="#valueEditModal">Add new config value</button>
                </p>
            </div>
        }
    </div>
    <div class="tab-pane fade" id="usage">Usage</div>
    <div class="tab-pane fade" id="settings">
        <h1>@ViewBag.ProjectName settings:</h1>
        <div class="d-flex flex-row">
            <div class="col-form-label settings-label">
                Project color:
            </div>
            <div class="setting-form">
                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-primary active">
                        <input type="radio" name="projectColor" id="projectColor1" value="blue" autocomplete="off" checked=""> &nbsp;&nbsp;&nbsp;&nbsp;
                    </label>
                    <label class="btn btn-success">
                        <input type="radio" name="projectColor" id="projectColor2" value="green" autocomplete="off"> &nbsp;&nbsp;&nbsp;&nbsp;
                    </label>
                    <label class="btn btn-danger">
                        <input type="radio" name="projectColor" id="projectColor3" value="red" autocomplete="off"> &nbsp;&nbsp;&nbsp;&nbsp;
                    </label>
                    <label class="btn btn-warning">
                        <input type="radio" name="projectColor" id="projectColor4" value="yellow" autocomplete="off"> &nbsp;&nbsp;&nbsp;&nbsp;
                    </label>
                    <label class="btn btn-info">
                        <input type="radio" name="projectColor" id="projectColor5" value="purple" autocomplete="off"> &nbsp;&nbsp;&nbsp;&nbsp;
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="valueEditModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="valueEditModalTitle">Edit value</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="modal-close-btn">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="config-value-name">Value name:</label>
                    <input type="text" class="form-control material-input" id="config-value-name" placeholder="Value name">
                </div>
                <div class="form-group">
                    <label for="config-value-description">Value description:</label>
                    <input type="text" class="form-control material-input" id="config-value-description" placeholder="Value description">
                </div>
                <div class="form-group">
                    <label for="config-value">Value:</label>
                    <input type="text" class="form-control material-input" id="config-value" placeholder="Value">
                </div>
                <div class="progress" id="saving-bar">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
                </div>
            </div>
            <div class="modal-footer" id="value-modal-footer">
                <button type="button" class="btn btn-primary" id="save-changes-btn" data-id="-1" data-project-id="@ViewBag.ProjectId">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="valueViewModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="valueViewModalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="modal-close-btn">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="valueViewModalValue">

            </div>
            <div class="modal-footer" id="value-modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="confirmDeleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="modal-close-btn">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete config value <span id="deleteValueName"></span>?
            </div>
            <div class="modal-footer" id="value-modal-footer">
                <button type="button" class="btn btn-primary" id="confirm-delete-btn">Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
